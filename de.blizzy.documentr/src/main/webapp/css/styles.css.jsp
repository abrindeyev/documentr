body {
	background-color: white;
}

h1 .page-metadata {
	color: #999999;
	display: block;
	font-size: 11px;
	margin-top: 2pt;
	font-weight: normal;
}

textarea.code {
	font-family: Menlo,Monaco,Consolas,"Courier New",monospace;
	font-size: 12px;
}

.modal.modal-wide {
	width: 800px;
}

code {
	color: inherit;
}

table.table-documentr {
	margin-bottom: 18px;
}

.hero-unit.hero-single {
	margin-top: 100pt;
}

.spacer {
	margin-top: 25pt;
}

.securityHiddenUI * {
	background-color: red !important;
}

.breadcrumb {
	background-color: #f0f0f0;
	background-image: -moz-linear-gradient(center top, #f5f5f5, #f0f0f0);
	border-radius: 0;
}

.breadcrumb ul {
	margin: 0;
}

.breadcrumb .btn-toolbar {
	margin: 0;
}

.breadcrumb .dropdown-menu li {
	display: list-item;
}

.breadcrumb li.btn-toolbar {
	line-height: 1px;
}

.loginForm {
	margin-top: 100pt;
}

.form-horizontal .control-label {
	text-align: left;
}

.well .form-actions {
	margin-bottom: 0;
	padding: 17px 20px 0;
}

.form-horizontal .form-actions,
.form-inline .form-actions {
	padding-left: 0;
}

.page-toolbar {
	margin-top: 18px;
}
