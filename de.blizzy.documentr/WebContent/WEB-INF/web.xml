<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="documentr" version="3.0">
	
	<display-name>de.blizzy.documentr</display-name>


	<context-param>
		<param-name>documentr.dataDir</param-name>
		<param-value>D:\bZ\documentr_data</param-value>
	</context-param>


	<servlet>
		<servlet-name>documentr</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextClass</param-name>
			<param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
		</init-param>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>de.blizzy.documentr.ContextConfig</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>documentr</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>


	<filter>
		<filter-name>requestEncodingFilter</filter-name>
		<filter-class>de.blizzy.documentr.web.filter.RequestEncodingFilter</filter-class>
	</filter>


	<filter-mapping>
		<filter-name>requestEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	

	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/view/error.jsp</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/view/error.jsp</location>
	</error-page>
</web-app>
